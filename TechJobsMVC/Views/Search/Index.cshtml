<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
            <span>
                @if (@column.Key == ViewBag.radioCheck)
                {
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked />
                }
                else
                {
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" />
                }
                <label for="@column.Key">@column.Value</label>
            </span>
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    @{
        //TODO #4: Loop over the search results to display all job fields.
    }

    @if (ViewBag.jobs != null)
    {
        @if (ViewBag.jobs.Count != 0)
        {
            @foreach (var job in ViewBag.jobs)
            {
                <table class="job-listing">

                    <tr>
                        <th>ID</th>
                        <td>@job.Id</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>@job.Name</td>
                    </tr>
                    <tr>
                        <th>Employer</th>
                        <td>@job.Employer</td>
                    </tr>
                    <tr>
                        <th>Location</th>
                        <td>@job.Location</td>
                    </tr>
                    <tr>
                        <th>Position Type</th>
                        <td>@job.PositionType</td>
                    </tr>
                    <tr>
                        <th>Competency</th>
                        <td>@job.CoreCompetency</td>
                    </tr>

                </table>
            }
        }
    }

</div>